{
    "compileOnSave": true,
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "target": "es2018",
        "module": "commonjs",
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types"
